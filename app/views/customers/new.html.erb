<head>

<style>
    body {
        background-image: url('/images/Carrera_gt.jpg');
        background-repeat: no-repeat;
        background-size: cover;

    }
</style>
</head>

<body>
<div class= 'container-sm w-25 right'>
    <h2 class='text-white' align='center'>Login With</h2>
    <div align='center'>
        <%= link_to 'Facebook', login_path, class: 'btn btn-primary' %>
        <%= link_to 'Google', login_path, class: 'btn btn-info' %>
    </div>
</div><br />

<div class='container-md w-75 bg-light rounded'>
    <div class='row'>
        <h5 class='col' align='center'>Or Create an Account to Make Appointments</h5>
    </div>
    <%= form_for @customer do |f| %>
            <p class='row col'>Full Name: <%= f.text_field :name, class: 'form-control'%></p>
            <p class='row col'>Street Address: <%= f.text_field :address, class: 'form-control' %></p>
            <div class='row'>
                <p class='col'>City: <%= f.text_field :city %></p>
                <p class='col'>State: <%= f.text_field :state %></p>
                <p class='col'>Zip: <%= f.text_field :zip %></p>
            </div>
            <div class='row'>
                <p class='col'>Email: <%= f.text_field :email %></p>
                <p class='col'>Phone: <%= f.text_field :phone %></p>
            </div>
            <div class='row'>
                <p class='col'>Password: <%= f.password_field :password %></p>
                <p class='col'>Re-enter Password: <%= f.password_field :password_confirmation %></p>
            </div>
            <%= f.submit class: 'row col btn btn-primary' %>
        </div>
    <% end %>
</div>
</body>