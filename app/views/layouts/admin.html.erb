<!DOCTYPE html>
<html lang="en">
  <head>
    <title>AutoDealer</title>
    
    <style>
      .field_with_errors {
        display: inline-block;
        border: 3px solid red;
      }
    </style>

    <!-- Bootstrap Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
      
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
      <nav class='navbar navbar-expand-md navbar-dark bg-primary'>
        <div class='container-fluid'>
          <div class='navbar-header'>
            <%= link_to image_tag('/images/logo2.jpg', height:50), root_path, class: 'navbar-brand' %>
          </div>
          <ul class="nav navbar-nav">
            <li class="nav-item">
              
            </li>
            <li class="nav-item">
              <%= link_to "Inventory (Customer View)", vehicles_path, class: 'nav-link active' %>
            </li>
            <li class='nav-item'>
              <%= link_to "Admin Menu", admin_menus_path, class: 'nav-link active' %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <% if employee_logged_in? %>
              <li class='nav-item'>
                <%= link_to "Logged In As: #{current_employee.name} ", edit_admin_employee_path(current_employee), class: 'nav-link active' %>
              </li>
              <li class='nav-item'>
                <%= button_to 'Logout', admin_logout_path, method: 'delete', class: 'text-white btn btn-link active' %>
              </li>
              <% else %>  
                <li class='nav-item'>
                    <%= link_to "Employee Login", admin_login_path, class: 'nav-link active' %>
                </li>
                <% end %>
            </li>
            
          </ul>
        </div>
      </nav>
      
    <!-- Flash Messages Display -->

    <div class='container w-50'>
      <% flash.each do |type, msg| %>
        <% if type == 'notice' %>
          <div class='alert alert-success' align='center'>
            <%= msg %>
          </div>
        <% elsif type == 'alert' %>
          <div class='alert alert-danger' align='center'>
            <%= msg %>
          </div>
        <% end %>
      <% end %>
    </div>

    

    <%= yield %>

    <!-- Bootstrap Optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>
